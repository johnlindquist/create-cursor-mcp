{
	"name": "create-cursor-mcp",
	"version": "1.0.0",
	"type": "module",
	"description": "CLI tool to quickly scaffold new MCP servers for Cursor AI",
	"author": "zue",
	"license": "MIT",
	"bin": {
		"create-cursor-mcp": "./cli.ts"
	},
	"files": [
		"cli.ts",
		"template"
	],
	"scripts": {
		"dev": "bun check && wrangler dev",
		"deploy": "workers-mcp docgen src/index.ts && bun check && wrangler deploy --minify",
		"check": "bunx biome check --write .",
		"semantic-release": "semantic-release",
		"prepare": "husky"
	},
	"keywords": [
		"mcp",
		"cursor",
		"cursor-ai",
		"create-cursor-mcp",
		"scaffold",
		"cli",
		"cloudflare",
		"workers"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/johnlindquist/create-cursor-mcp"
	},
	"bugs": {
		"url": "https://github.com/johnlindquist/create-cursor-mcp/issues"
	},
	"homepage": "https://github.com/johnlindquist/create-cursor-mcp#readme",
	"dependencies": {
		"npm-which": "^3.0.1",
		"picocolors": "^1.0.0",
		"prompts": "^2.4.2",
		"workers-mcp": "^0.0.13",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@cloudflare/workers-types": "^4.20250317.0",
		"@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^11.0.1",
		"@semantic-release/npm": "^12.0.1",
		"@types/npm-which": "^3.0.3",
		"@types/prompts": "^2.4.9",
		"@types/yargs": "^17.0.32",
		"bun-types": "latest",
		"husky": "^9.1.7",
		"semantic-release": "^24.2.3",
		"wrangler": "^4.1.0"
	}
}
